<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/background_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/alertDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Alert"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/black"
            android:padding="12dp" />
        <TextView
            android:id="@+id/alertDialogSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Alert selection will show here"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/datePickerDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/black"
            android:padding="12dp" />
        <TextView
            android:id="@+id/datePickerSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Date selection will show here"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/timePickerDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Time"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/black"
            android:padding="12dp" />
        <TextView
            android:id="@+id/timePickerSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Time selection will show here"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/customDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Custom Dialog"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/black"
            android:padding="12dp" />
        <TextView
            android:id="@+id/customDialogSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Custom dialog input will show here"
            android:gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
